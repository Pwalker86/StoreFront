<div class="tooltip-examples">
  <h3>Tooltip Examples</h3>
  
  <div class="example-container">
    <!-- Basic tooltip with trigger -->
    <div data-controller="tooltip" data-tooltip-text-value="This is a basic tooltip that appears when you hover">
      <button class="btn btn-primary" data-tooltip-target="trigger">Hover me</button>
    </div>
  </div>
  
  <div class="example-container mt-4">
    <!-- Tooltip with separate anchor element -->
    <div data-controller="tooltip" data-tooltip-text-value="This tooltip is anchored to a specific element">
      <span id="info-icon" class="info-icon" data-tooltip-target="trigger">â“˜</span>
      <div id="anchor-point" data-tooltip-target="anchor" class="d-inline-block ms-2">
        Tooltip anchored here
      </div>
    </div>
  </div>
  
  <div class="example-container mt-4">
    <!-- Tooltip that might need to reposition (near page edge) -->
    <div class="text-end">
      <div data-controller="tooltip" data-tooltip-text-value="This tooltip will adjust its position when near the edge of the screen">
        <button class="btn btn-secondary" data-tooltip-target="trigger">Edge case tooltip</button>
      </div>
    </div>
  </div>
  
  <div class="example-container mt-4">
    <!-- Multiple tooltips on a single page -->
    <div class="d-flex justify-content-between">
      <div data-controller="tooltip" data-tooltip-text-value="First tooltip">
        <span class="badge bg-primary" data-tooltip-target="trigger">Item 1</span>
      </div>
      
      <div data-controller="tooltip" data-tooltip-text-value="Second tooltip">
        <span class="badge bg-success" data-tooltip-target="trigger">Item 2</span>
      </div>
      
      <div data-controller="tooltip" data-tooltip-text-value="Third tooltip">
        <span class="badge bg-info" data-tooltip-target="trigger">Item 3</span>
      </div>
    </div>
  </div>
  
  <%= turbo_frame_tag "tooltip-frame-example" do %>
    <div class="example-container mt-4">
      <!-- Tooltip within a Turbo Frame -->
      <div data-controller="tooltip" data-tooltip-text-value="This tooltip works inside a Turbo Frame">
        <button class="btn btn-outline-primary" data-tooltip-target="trigger">Turbo Frame Tooltip</button>
      </div>
    </div>
  <% end %>
</div>

<style>
  .info-icon {
    display: inline-block;
    cursor: help;
    color: #0d6efd;
  }
  
  .example-container {
    padding: 1rem;
    border: 1px solid #dee2e6;
    border-radius: 0.25rem;
  }
</style>