<div>
  <h1 class="font-bold text-4xl">Services#index</h1>
  <% @services.each do |service| %>
    <div class="p-5 border-2 border-gray-400 rounded-md bg-gray-50">
      <h2 class="font-bold text-2xl"><%= service.name %></h2>
      <p><strong>Description:</strong>
        <%= service.description %></p>
      <p><strong>Type:</strong>
        <%= service.type %></p>
      <% if service.is_static? %>
        <p><strong>Rate per hour:</strong>
          <%= service.rate_per_hour %></p>
        <p><strong>Duration in hours:</strong>
          <%= service.duration_in_hours %></p>
      <% else %>
        <p><strong>Rate per hour:</strong>
          <%= service.rate_per_hour %></p>
        <p><strong>Duration in hours:</strong>
          <%= service.duration_in_hours %></p>
      <% end %>
    </div>
    <div class="mt-4">
      <%= link_to "Edit", edit_service_path(service), class: "text-blue-500" %>
      <%= link_to "Delete",
      service,
      method: :delete,
      data: {
        turbo_method: :delete,
        confirm: "Are you sure?",
      },
      class: "text-red-500" %>
    </div>
  <% end %>
</div>
