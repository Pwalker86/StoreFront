<div class="Navbar__Container">
  <div class="col-left">

    <div class="Navbar__LoggedInAs">
      Logged in as:
      <%= display_username %>
    </div>
    <div>
      <%= link_to 'View All Orders', orders_path %>
      <%= link_to 'View Products', products_path %>
    </div>
  </div>
  <div class="Navbar__Links col-right">
      <%= link_to 'Home', pages_home_path %>
    <% if @active_user  && !current_admin && !@active_user.is_a?(Guest) %>
      <%= link_to "Current Order: #{ @open_order.order_item_totals}", @open_order, title: 'View Order' %>
      <%= link_to 'Log out', destroy_user_session_path, data: { turbo_method: :delete } %>
    <% elsif admin_signed_in? %>
      <%= link_to 'Log out', destroy_admin_session_path, data: { turbo_method: :delete } %>
    <% else %>
      <%= link_to 'User Log in', new_user_session_path %>
      <%= link_to 'Admin Sign In', new_admin_session_path %>
    <% end %>
  </div>
</div>
