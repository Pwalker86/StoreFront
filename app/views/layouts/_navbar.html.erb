<div class="Navbar Search__anchor">
  <div class="Navbar__brand">
    <%= link_to root_path do %>
      <i class="fa-brands fa-forumbee" title="MarketHive"></i>
    <% end %>
  </div>

  <%= render(
    SearchComponent.new(url: "/search", input_placeholder: "Search Products..."),
  ) %>

  <div class="Navbar__menu">
    <% if current_user || current_store_admin %>
      <%= render "shared/#{user_type}_links", path: "orders_index" %>
    <% end %>
    <%= render "shared/#{user_type}_links", path: "cart_show" %>
  </div>
</div>
