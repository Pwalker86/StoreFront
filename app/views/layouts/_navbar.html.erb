<div class="navbar">
  <div class="brand">Shopzilla</div>
  <div class="menu">
    <% if current_user || current_store_admin %>
      <%= render "shared/#{user_type}_links", path: "orders_index" %>
    <% end %>
    <a href="#">Deals</a>
    <a href="#">Cart</a>
    <a href="#">Contact</a>
  </div>
  <%#<a href="#" class="cta"> %>
  <%= icon "cart", css: "cta" %>
  <%#Logged in as: %>
  <%#= display_username %>
  <%#</a> %>
</div>
<div class="Navbar__Container">
  <div class="Navbar__Links col-left">
    <div class="Navbar__LoggedInAs">
      Logged in as:
      <%= display_username %>
    </div>
    <div>
      <% if current_user || current_store_admin %>
        <%= render "shared/#{user_type}_links", path: "orders_index" %>
      <% end %>
    </div>
    <div>
      <% if current_store_admin && current_store_admin.store.persisted? %>
        <%= link_to "Edit Store", edit_store_path(current_store_admin.store.id) %>
      <% elsif current_store_admin && current_store_admin.store.nil? %>
        <%= link_to "New Store", new_store_path %>
      <% end %>
      <% if current_store_admin && current_store_admin.store.present? %>
        <%= link_to "View Store", current_store_admin.store %>
      <% end %>
    </div>
  </div>
  <div class="Navbar__Links col-right">
    <%= link_to "Home", root_path %>
    <%= render "shared/#{user_type}_links", path: "cart_show" %>
    <% unless @active_user.is_a? Guest %>
      <%= render "shared/#{user_type}_links", path: "log_out" %>
    <% end %>
  </div>
</div>
