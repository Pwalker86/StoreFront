<div class="py-1 px-2 bg-amber-100 sticky bottom-0">
  <div class="flex flex-row justify-center gap-5">
    <%= link_to "Home", root_path %>
    <% if active_user  && !current_store_admin && !active_user.is_a?(Guest) %>
      <%= link_to "Log out", destroy_user_session_path, data: { turbo_method: :delete } %>
    <% elsif store_admin_signed_in? && current_store_admin.store&.persisted? %>
      <%= link_to "Store Image",
      store_admin_store_store_image_path(
        current_store_admin,
        current_store_admin.store,
        1,
      ) %>
    <% elsif store_admin_signed_in? && !current_store_admin.store.persisted? %>
      <%= link_to "Log out",
      destroy_store_admin_session_path,
      data: {
        turbo_method: :delete,
      } %>
    <% else %>
      <%= link_to "User Log in", new_user_session_path %>
      <%= link_to "Admin Sign In", new_store_admin_session_path %>
    <% end %>
  </div>
</div>
