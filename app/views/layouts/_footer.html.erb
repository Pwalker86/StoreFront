<div
  class="
    py-3 px-6 bg-gradient-to-r from-indigo-600 to-purple-600 sticky bottom-0
    shadow-lg
  "
>
  <div class="flex flex-row justify-center gap-5 items-center">
    <% if !current_store_admin && @auto_login_admin.present? %>
      <%= render TooltipComponent.new(tooltip_text: "Automatic login for ease of use for demo purposes") do %>
        <%= link_to "Login As Admin",
        auto_logins_path("store_admin", email: @auto_login_admin.email),
        method: :post,
        data: {
          turbo_method: :post,
        },
        class: "text-white hover:text-gray-200 transition-all duration-150" %>
      <% end %>
    <% end %>
    <% if !current_store_admin %>
      <%= render BottomSearchComponent.new(url: '/search', ) do %>
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="
            h-6 w-6 text-white hover:text-gray-200 transition-all duration-150
          "
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"
          />
        </svg>
      <% end %>
    <% end %>
    <% if !current_user && @auto_login_user.present? %>
      <%= render TooltipComponent.new(tooltip_text: "Automatic login for ease of use for demo purposes") do %>
        <%= link_to "Login As User",
        auto_logins_path("user", email: @auto_login_user.email),
        method: :post,
        data: {
          turbo_method: :post,
        },
        class: "text-white hover:text-gray-200 transition-all duration-150" %>
      <% end %>
    <% end %>
    <% if current_store_admin && current_store_admin.store.persisted? %>
      <%= link_to "Services",
      store_admin_store_services_path(current_store_admin, current_store_admin.store),
      class: "text-white hover:text-gray-200 font-medium transition-all duration-150" %>
      <%= render TooltipComponent.new(tooltip_text: "Logout") do %>
        <%= link_to "Log Out",
        destroy_store_admin_session_path,
        method: :delete,
        data: {
          turbo_method: :delete,
        },
        class: "text-white hover:text-gray-200 transition-all duration-150" %>
      <% end %>
    <% end %>
    <% if current_user %>
      <%= render TooltipComponent.new(tooltip_text: "Logout") do %>
        <%= link_to "Log Out",
        destroy_user_session_path,
        method: :delete,
        data: {
          turbo_method: :delete,
        },
        class: "text-white hover:text-gray-200 transition-all duration-150" %>
      <% end %>
    <% end %>
  </div>
</div>
