<div class="max-w-lg mx-auto bg-white p-8 rounded-xl shadow-md mt-8">
  <h2 class="text-2xl font-bold text-gray-800 mb-2">Sign up</h2>
  <div class="w-16 h-1 bg-indigo-600 mb-6"></div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: 'space-y-6') do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="space-y-2 mb-4">
      <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-1 block w-full rounded-md border-2 border-gray-400 shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-500 focus:ring-opacity-50 px-2 py-1" %>
    </div>

    <div class="space-y-2 mb-4">
      <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
      <% if @minimum_password_length %>
      <span class="text-xs text-gray-500">(<%= @minimum_password_length %> characters minimum)</span>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class: "mt-1 block w-full rounded-md border-2 border-gray-400 shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-500 focus:ring-opacity-50 px-2 py-1" %>
    </div>

    <div class="space-y-2 mb-6">
      <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "mt-1 block w-full rounded-md border-2 border-gray-400 shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-500 focus:ring-opacity-50 px-2 py-1" %>
    </div>

    <div class="pt-4">
      <%= f.submit "Sign up", class: "w-full inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    </div>
  <% end %>

  <div class="relative my-6">
    <div class="absolute inset-0 flex items-center">
      <div class="w-full border-t border-gray-300"></div>
    </div>
    <div class="relative flex justify-center text-sm">
      <span class="px-2 bg-white text-gray-500">- or -</span>
    </div>
  </div>

  <div class="text-center">
    <%= render "devise/shared/links" %>
  </div>
</div>
