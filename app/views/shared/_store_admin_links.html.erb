<% if current_store_admin %>
  <% if path === 'show_store' && current_store_admin.store.persisted? %>
    <%= link_to "View Store",
    store_admin_store_path(current_store_admin, current_store_admin.store) %>
  <% end %>

  <% if path === 'new_store' %>
    <%= link_to "Create Store", new_store_admin_store_path(current_store_admin) %>
  <% end %>

  <% if path === 'edit_store' %>
    <%= link_to "Edit Store",
    edit_store_admin_store_path(current_store_admin, current_store_admin.store.id) %>
  <% end %>

  <% if path === 'orders_index' && current_store_admin.store.persisted? %>
    <%= link_to "View All Orders",
    store_admin_store_orders_path(current_store_admin, current_store_admin.store) %>
  <% end %>

  <% if path === 'log_out' %>
    <%= link_to "Log out",
    destroy_store_admin_session_path,
    data: {
      turbo_method: :delete,
    } %>
  <% end %>

  <% if path === 'shipping_details' %>
    <%= link_to "Import Shipping Details",
    new_store_admin_shipping_detail_path(current_store_admin) %>
  <% end %>

  <% if current_store_admin.store&.persisted? %>
    <% if path === 'fulfillment_partner' && current_store_admin.store.fulfillment_partner.present? %>
      <%= link_to "Fulfillment Partners",
      store_admin_store_fulfillment_partner_path(
        current_store_admin,
        current_store_admin.store,
        current_store_admin.store.fulfillment_partner,
      ) %>
    <% elsif path ==='fulfillment_partner' %>
      <%= link_to "Create Fulfillment Partner",
      new_store_admin_store_fulfillment_partner_path(
        current_store_admin,
        current_store_admin.store,
      ) %>
    <% end %>
  <% end %>
<% end %>
