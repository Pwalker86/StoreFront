<% if current_store_admin %>
  <% if path === 'show_store' && current_store_admin.store.persisted? %>
    <%= link_to "View Store",
    store_admin_store_path(current_store_admin, current_store_admin.store) %>
  <% end %>

  <% if path === 'new_store' %>
    <%= link_to "Create Store", new_store_admin_store_path(current_store_admin) %>
  <% end %>

  <% if path === 'edit_store' %>
    <%= link_to "Edit Store",
    edit_store_admin_store_path(current_store_admin, current_store_admin.store.id) %>
  <% end %>

  <% if path === 'orders_index' %>
    <%= link_to "View All Orders", store_admins_orders_path %>
  <% end %>

  <% if path === 'log_out' %>
    <%= link_to "Log out",
    destroy_store_admin_session_path,
    data: {
      turbo_method: :delete,
    } %>
  <% end %>
<% end %>
