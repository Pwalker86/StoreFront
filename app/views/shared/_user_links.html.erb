<% if current_user %>

  <% if path === 'orders_index' %>
    <%= link_to "View All Orders", orders_path %>
  <% end %>

  <% if path === 'cart_show' %>
    <%= link_to "My Cart: #{@cart.cart_item_totals}",
    user_cart_path(@active_user),
    params: {
      user_entity: @active_user.class.name,
    },
    title: "View Order" %>
  <% end %>

  <% if path === 'log_out' %>
    <%= link_to "Log out", destroy_user_session_path, data: { turbo_method: :delete } %>
  <% end %>
<% end %>
