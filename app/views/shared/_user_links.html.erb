<% if @active_user %>

  <% if path === 'orders_index' %>
    <%= link_to "View Orders", orders_path %>
  <% end %>

  <% if path === 'cart_show' %>
    <%= link_to user_cart_path(@active_user), params: { user_entity: @active_user.class.name } do %>
      <i class="fa-solid fa-cart-shopping cart-icon text-white"></i>
      <%= tag.turbo_frame id: "cart_count_#{@active_user.cart.id}" do %>
        <%= render "layouts/cart_count", cart: @active_user.cart %>
      <% end %>
    <% end %>
  <% end %>

  <% if path === 'log_out' %>
    <%= link_to "Log out", destroy_user_session_path, data: { turbo_method: :delete } %>
  <% end %>
<% end %>
