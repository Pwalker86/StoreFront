<div class="Product__Card">
  <p>
    <strong>Name:</strong>
    <%= product.name %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= product.price %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= product.description %>
  </p>

  <% if @active_user && !current_admin %>
    <%= button_to "Add to Order",
    user_cart_path(@active_user),
    params: {
      user_entity: @active_user.class.name,
      product_id: product.id,
      quantity: 1,
    },
    data: {
      turbo: false,
    },
    method: :patch,
    class: "button-link" %>
  <% end %>
  <% if current_admin %>
    <%= button_to "Delete", product_path(product), method: :delete, class: "button-link" %>
    <div class="Product__Card__admin_links">
      <%= link_to "View", product, class: "button-link" %>
      <%= link_to "Edit", edit_product_path(product), class: "button-link" %>
    </div>
  <% end %>
</div>
