<div id="<%= dom_id product %>" class="Product__Card">
  <p>
    <strong>Name:</strong>
    <%= product.name %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= product.price %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= product.description %>
  </p>

  <% if current_page?(products_path) %>
    <p>
      <%= link_to "View", product, class: 'button-link' %>
    </p>
  <% end %>
</div>