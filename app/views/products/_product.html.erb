<% if controller_name === 'products' && controller_action === 'show' %>
  <% @class_modifier = "productsShow" %>
<% else %>
  <% @class_modifier = "storesShow" %>
<% end %>

<div class="Product__Card__<%=@class_modifier%>">
  <% if product.archived %>
    <span>Archived</span>
  <% end %>
  <p>
    <strong>Name:</strong>
    <%= product.name %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= product.price %>
  </p>

  <p>
    <strong>Description:</strong>
    <div class="Product__Card__description">
      <%= product.description %>
    </div>
  </p>

  <% if @active_user && !current_store_admin %>
    <%= button_to "Add to Order",
    user_cart_path(@active_user),
    params: {
      user_entity: @active_user.class.name,
      product_id: product.id,
      quantity: 1,
    },
    data: {
      turbo: false,
    },
    method: :patch,
    class: "button-link" %>
  <% end %>
  <% if current_store_admin %>
    <div class="Product__Card__admin_links">
      <%= button_to "Archive",
      store_product_archive_path(@store, product),
      class: "button-link" %>
      <%= link_to "View", store_product_path(@store, product), class: "button-link" %>
      <%= link_to "Edit", edit_store_product_path(@store, product), class: "button-link" %>
    </div>
  <% end %>
</div>
