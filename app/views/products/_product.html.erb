<div id="<%= dom_id product %>" class="Product__Card">
  <p>
    <strong>Name:</strong>
    <%= product.name %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= product.price %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= product.description %>
  </p>

  <% if @active_user && !current_admin %>
    <%= button_to 'Add to Order', order_items_path(order_id: @open_order.id, product_id: product.id, quantity: 1) %>
  <% end %>
      <%= link_to "View", product, class: 'button-link' %>
    <%# <%= turbo_frame_tag "edit_product_#{product.id}" do %1> %>
      <%= link_to "Edit", edit_product_path(product), class: 'button-link' %>
    <%# <% end %1> %>
</div>
