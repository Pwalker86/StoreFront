<div id="<%= dom_id product %>" class="Product__Card">
  <p>
    <strong>Name:</strong>
    <%= product.name %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= product.price %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= product.description %>
  </p>

  <% if user_signed_in? %>
    <%= button_to 'Add to Order', order_item_path(id:@order.id, product_id: product.id, qty: 1), method: :put %>
  <% end %>
  <% if current_page?(products_path) %>
    <p>
      <%= link_to "View", product, class: 'button-link' %>
    </p>
  <% end %>
</div>