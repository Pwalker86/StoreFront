<%= render "products/product_card", store: @product.store, product: @product %>
<div class="Product__image-container">
  <% @product.images.each do |image| %>
    <%= turbo_frame_tag "product_image_#{image.id}" do %>
      <div class="Product__image-card">
        <%= image_tag image.variant(:thumb) %>
        <%= button_to "Remove Image",
        store_product_remove_image_path(@store, @product, { image_id: image.id }),
        method: :delete %>
      </div>
    <% end %>
  <% end %>
</div>

<%= render "product_reviews/add_review", product: @product %>

<%= turbo_frame_tag "product_reviews" do %>
  <%= render "product_reviews/reviews", reviews: @product.reviews.ordered %>
<% end %>

<div>
  <%= link_to "Back to store", store_path(@product.store) %>
</div>
