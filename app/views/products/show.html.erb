<%= turbo_frame_tag "product_#{@product.id}" do %>
  <%= render ProductShowComponent.new(product: @product) do |component| %>
    <%= component.with_image_carousel(images: @product.images) %>
    <%= component.with_product_details(product: @product) %>
  <% end %>
<% end %>

<div class="ProductReview__section">
  <%= render "product_reviews/add_review_button", product: @product %>

  <%= turbo_frame_tag "product_reviews", data: {"turbo-action": "advance"} do %>
    <%= render "product_reviews/reviews", reviews: @reviews %>
  <% end %>
</div>
