<div class="card">
  <% if store.spotlight.attached? %>
    <%= image_tag store.spotlight.variant(:thumb) %>
  <% else %>
    <div class="img-placeholder"></div>
  <% end %>
  <div class="card-content">
    <h3 class="card-title"><%= product.name %></h3>
    <p class="card-description"><%= number_to_currency(product.price) %></p>
    <% if @active_user && !current_store_admin %>
      <%= button_to user_cart_path(@active_user), params: { user_entity: @active_user.class.name, product_id: product.id, quantity: 1, }, data: { turbo: false, }, method: :patch, class: 'cart-button' do %>
        <svg
          class="cart-icon"
          stroke="currentColor"
          stroke-width="1.5"
          viewBox="0 0 24 24"
          fill="none"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path
            d="M2.25 3h1.386c.51 0 .955.343 1.087.835l.383 1.437M7.5 14.25a3 3 0 0 0-3 3h15.75m-12.75-3h11.218c1.121-2.3 2.1-4.684 2.924-7.138a60.114 60.114 0 0 0-16.536-1.84M7.5 14.25 5.106 5.272M6 20.25a.75.75 0 1 1-1.5 0 .75.75 0 0 1 1.5 0Zm12.75 0a.75.75 0 1 1-1.5 0 .75.75 0 0 1 1.5 0Z"
            stroke-linejoin="round"
            stroke-linecap="round"
          ></path>
        </svg>
        <span>Add to cart</span>
      <% end %>
    <% end %>
    <% if current_store_admin %>
      <%= link_to "Edit", edit_store_product_path(store, product), class: "button" %>
    <% end %>
  </div>
</div>
