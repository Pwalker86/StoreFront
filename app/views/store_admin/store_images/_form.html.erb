<%= turbo_frame_tag "store_image_form" do %>
  <div class="mx-center w-50" data-controller="js-submit">
    <%= form_with model: [current_store_admin, @store], url: store_admin_store_store_image_path(id: 1), data: {js_submit_target: 'form'} do |form| %>
      <div class="form-input">
        <%= form.label :spotlight %>
        <%= form.file_field :spotlight, data: { js_submit_target: "input" } %>
      </div>

      <div>
        <%= form.submit "Upload Image", data: { action: "js-submit#jsSubmit" } %>
      </div>

      <%= link_to "Cancel", [current_store_admin, @store], class: "btn btn--light" %>
    <% end %>
  </div>
<% end %>
