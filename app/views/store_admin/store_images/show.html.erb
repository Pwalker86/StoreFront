<%= turbo_frame_tag "store_image" do %>
  <% if @store.spotlight.attached? %>
    <div class="bg-white p-4 rounded-xl shadow-md relative">
      <div class="w-full h-48 overflow-hidden rounded-lg">
        <%= image_tag @spotlight.variant(:thumb), class: "w-full h-full object-cover object-center" %>
      </div>
      <%= button_to store_admin_store_store_image_path(current_store_admin, @store, 1),
        method: :delete,
        data: { turbo: false },
        class: "absolute top-2 right-2 p-1.5 bg-red-600 rounded-full text-white hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition-colors",
        title: "Remove Image" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
          <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
        </svg>
      <% end %>
    </div>
  <% end %>
<% end %>
