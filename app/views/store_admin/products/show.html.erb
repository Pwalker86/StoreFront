<div class="container max-w-4xl mx-auto px-4 py-8">
  <div class="mb-6 flex flex-col items-center">
    <h1 class="text-3xl font-bold text-gray-800 mb-2"><%= @product.name %></h1>
    <div class="h-1 w-24 bg-indigo-600 rounded"></div>
  </div>

  <div class="mb-4 flex justify-end">
    <%= link_to edit_store_admin_store_product_path(current_store_admin, @store, @product),
        class: "inline-flex items-center px-4 py-2 bg-indigo-600 border border-transparent rounded-md font-medium text-white hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition ease-in-out duration-150" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
        <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z" />
      </svg>
      Edit Product
    <% end %>
  </div>

  <%= render ProductShowComponent.new(product: @product) do |component| %>
    <%= component.with_image_carousel(images: @product.images) %>
    <%= component.with_product_details(product: @product) %>
  <% end %>

  <div class="mt-6">
    <%= link_to store_admin_store_products_path(current_store_admin, @store),
        class: "inline-flex items-center px-4 py-2 bg-gray-100 border border-gray-300 rounded-md font-medium text-gray-700 hover:bg-gray-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 transition ease-in-out duration-150" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
      </svg>
      Back to Products
    <% end %>
  </div>
</div>
