<div class="container max-w-4xl mx-auto px-4 py-8">
  <div class="mb-6 flex flex-col items-center">
    <h1 class="text-3xl font-bold text-gray-800 mb-2"><%= current_store_admin.store.name %>
      Services</h1>
    <div class="h-1 w-24 bg-indigo-600 rounded"></div>
  </div>

  <div class="bg-white rounded-xl shadow-lg overflow-hidden">
    <div
      class="
        bg-gradient-to-r from-indigo-600 to-purple-600 py-4 px-6 flex justify-between
        items-center
      "
    >
      <h2 class="text-xl font-semibold text-white">Service Offerings</h2>
      <%= link_to new_store_admin_store_service_path(current_store_admin, current_store_admin.store),
          class: "inline-flex items-center px-3 py-1.5 bg-white border border-transparent rounded-md font-medium text-indigo-600 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-white" do %>
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-5 w-5 mr-1"
          viewBox="0 0 20 20"
          fill="currentColor"
        >
          <path
            fill-rule="evenodd"
            d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z"
            clip-rule="evenodd"
          />
        </svg>
        New Service
      <% end %>
    </div>

    <div class="p-6">
      <% if @services.any? %>
        <!-- Desktop table view (hidden on small screens, visible on md screens
        and up) -->
        <div class="hidden md:block overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead>
              <tr>
                <th
                  class="
                    px-6 py-3 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase
                    tracking-wider
                  "
                ></th>
                <th
                  class="
                    px-6 py-3 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase
                    tracking-wider
                  "
                >Name</th>
                <th
                  class="
                    px-6 py-3 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase
                    tracking-wider
                  "
                >Type</th>
                <th
                  class="
                    px-6 py-3 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase
                    tracking-wider
                  "
                >Rate</th>
                <th
                  class="
                    px-6 py-3 bg-gray-50 text-right text-xs font-medium text-gray-500 uppercase
                    tracking-wider
                  "
                >Actions</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @services.each do |service| %>
                <tr class="hover:bg-gray-50">
                  <td><%= link_to "View",
                    store_admin_store_service_path(
                      current_store_admin,
                      current_store_admin.store,
                      service,
                    ),
                    class: "text-indigo-600 hover:text-indigo-900 mx-auto block w-fit" %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm font-medium text-gray-900"><%= service.name %></div>
                    <div class="text-sm text-gray-500 truncate max-w-xs"><%= service.description %></div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span
                      class="
                        px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-indigo-100
                        text-indigo-800
                      "
                    >
                      <%= service.type %>
                    </span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm text-gray-900">$<%= service.rate_per_hour %>/hr</div>
                    <div class="text-sm text-gray-500"><%= service.duration_in_hours %>
                      hours</div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                    <%= link_to edit_store_admin_store_service_path(current_store_admin, current_store_admin.store, service),
                        class: "text-indigo-600 hover:text-indigo-900 mr-3 inline-flex items-center" do %>
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        class="h-4 w-4 mr-1"
                        viewBox="0 0 20 20"
                        fill="currentColor"
                      >
                        <path
                          d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z"
                        />
                      </svg>
                      Edit
                    <% end %>
                    <%= button_to store_admin_store_service_path(current_store_admin, current_store_admin.store, service),
                        method: :delete,
                        data: { confirm: "Are you sure?" },
                        form_class: "inline",
                        class: "cursor-pointer text-red-600 hover:text-red-900 inline-flex items-center" do %>
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        class="h-4 w-4 mr-1"
                        viewBox="0 0 20 20"
                        fill="currentColor"
                      >
                        <path
                          fill-rule="evenodd"
                          d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z"
                          clip-rule="evenodd"
                        />
                      </svg>
                      Delete
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <!-- Mobile card layout (visible on small screens, hidden on md screens
        and up) -->
        <div class="md:hidden space-y-4">
          <% @services.each do |service| %>
            <div class="bg-white border border-gray-200 rounded-lg shadow-sm p-4">
              <div class="flex justify-between items-center mb-2">
                <h3 class="font-medium text-gray-900"><%= service.name %></h3>
                <span
                  class="
                    px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-indigo-100
                    text-indigo-800
                  "
                >
                  <%= service.type %>
                </span>
              </div>

              <div class="text-sm text-gray-500 mb-2">
                <%= service.description %>
              </div>

              <div class="flex justify-between items-center mt-2 text-sm">
                <div>
                  <span class="font-medium">Rate:</span>
                  $<%= service.rate_per_hour %>/hr
                </div>
                <div>
                  <span class="font-medium">Duration:</span>
                  <%= service.duration_in_hours %>
                  hours
                </div>
              </div>

              <div class="flex justify-end items-center mt-4">
                <%= button_to edit_store_admin_store_service_path(current_store_admin, current_store_admin.store, service),
                    class: "inline-flex items-center px-3 py-1.5 bg-indigo-50 border border-transparent rounded-md text-sm text-indigo-700 hover:bg-indigo-100 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 mr-2" do %>
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-4 w-4 mr-1"
                    viewBox="0 0 20 20"
                    fill="currentColor"
                  >
                    <path
                      d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z"
                    />
                  </svg>
                  Edit
                <% end %>

                <%= button_to store_admin_store_service_path(current_store_admin, current_store_admin.store, service),
                    method: :delete,
                    data: { confirm: "Are you sure?" },
                    class: "inline-flex items-center px-3 py-1.5 bg-red-50 border border-transparent rounded-md text-sm text-red-700 hover:bg-red-100 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" do %>
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-4 w-4 mr-1"
                    viewBox="0 0 20 20"
                    fill="currentColor"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z"
                      clip-rule="evenodd"
                    />
                  </svg>
                  Delete
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-10">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="mx-auto h-12 w-12 text-gray-400"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
            />
          </svg>
          <h3 class="mt-2 text-lg font-medium text-gray-900">No services yet</h3>
          <p class="mt-1 text-sm text-gray-500">Get started by creating your first service.</p>
          <div class="mt-6">
            <%= link_to new_store_admin_store_service_path(current_store_admin, current_store_admin.store),
                class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-5 w-5 mr-2"
                viewBox="0 0 20 20"
                fill="currentColor"
              >
                <path
                  fill-rule="evenodd"
                  d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z"
                  clip-rule="evenodd"
                />
              </svg>
              Add First Service
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
