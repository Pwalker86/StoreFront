<div class="min-h-screen bg-gray-50 py-8">
  <div class="container max-w-4xl mx-auto px-4">
    <div class="mb-6 flex flex-col items-center">
      <h1 class="text-2xl md:text-3xl font-bold text-gray-800 mb-2"><%= display_username %>'s Cart</h1>
      <div class="h-1 w-24 bg-indigo-600 rounded"></div>
    </div>

    <%= tag.turbo_frame id: "cart_#{@active_user.cart.id}" do %>
      <%= render "cart_table", cart: @active_user.cart %>
    <% end %>
    
    <div class="mt-6 flex justify-end">
      <%= link_to checkout_user_cart_path(active_user), 
          class: "inline-flex items-center px-6 py-3 border border-transparent rounded-md shadow-sm text-base font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd" />
        </svg>
        Proceed to Checkout
      <% end %>
    </div>
  </div>
</div>
