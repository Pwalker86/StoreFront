<div class="Checkout__ShippingInfo__container">
  <div class="Checkout__ShippingInfo__header">
    <h1>Shipping Information</h1>
    <%= form_for @order, url: orders_path(@order), method: :post do |form| %>
      <%= form.hidden_field :user_entity, value: @active_user.class.name %>
      <%= form.hidden_field :user_entity_id, value: @active_user.id %>
      <div class="Checkout__ShippingInfo__container">
        <% if @cart.guest.present? %>
          <div class="form-group">
            <%= label_tag :email, "Email" %>
            <%= text_field_tag :email, nil, { required: true } %>
          </div>
        <% end %>
        <div class="form-group">
          <%= form.label :address1, "Address 1" %>
          <%= form.text_field :address1, required: true %>
        </div>
        <div class="form-group">
          <%= form.label :address2, "Address 2" %>
          <%= form.text_field :address2, required: false %>
        </div>
        <div class="form-group">
          <%= form.label :city, "City" %>
          <%= form.text_field :city, required: true %>
        </div>
        <div class="form-group">
          <%= form.label :state, "State" %>
          <%= form.select :state,
                      US_STATES,
                      required: true,
                      include_blank: " Select your state" %>
        </div>
        <div class="form-group">
          <%= form.label :postal_code, "Postal Code" %>
          <%= form.number_field :postal_code, required: true %>
        </div>
        <div class="form-group">
          <%= form.submit "Submit", class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
