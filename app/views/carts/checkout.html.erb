<div class="max-w-4xl mx-auto px-4">
  <div class="mb-6 flex flex-col items-center">
    <h1 class="text-2xl md:text-3xl font-bold text-gray-800 mb-2">Shipping Information</h1>
    <div class="h-1 w-24 bg-indigo-600 rounded"></div>
  </div>

  <div class="max-w-lg mx-auto bg-white p-8 rounded-xl shadow-md">
    <%= form_with model: @order, class: "space-y-6" do |form| %>
      <%= form.hidden_field :user_entity, value: @active_user.class.name %>
      <%= form.hidden_field :user_entity_id, value: @active_user.id %>
      
      <div class="space-y-2">
        <%= form.label :email, "Email", class: "block text-sm font-medium text-gray-700" %>
        <%= form.email_field :email,
                         class: "mt-1 block w-full rounded-md border-2 border-gray-400 shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-500 focus:ring-opacity-50 px-2 py-1",
                         required: true,
                         value: @email %>
      </div>
      
      <div class="space-y-2">
        <%= form.label :full_name, "Full Name", class: "block text-sm font-medium text-gray-700" %>
        <%= form.text_field :full_name,
                        class: "mt-1 block w-full rounded-md border-2 border-gray-400 shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-500 focus:ring-opacity-50 px-2 py-1",
                        required: true %>
      </div>
      
      <div class="space-y-2">
        <%= form.label :address1, "Address 1", class: "block text-sm font-medium text-gray-700" %>
        <%= form.text_field :address1,
                        class: "mt-1 block w-full rounded-md border-2 border-gray-400 shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-500 focus:ring-opacity-50 px-2 py-1",
                        required: true %>
      </div>
      
      <div class="space-y-2">
        <%= form.label :address2, "Address 2", class: "block text-sm font-medium text-gray-700" %>
        <%= form.text_field :address2,
                        class: "mt-1 block w-full rounded-md border-2 border-gray-400 shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-500 focus:ring-opacity-50 px-2 py-1",
                        required: false %>
      </div>
      
      <div class="space-y-2">
        <%= form.label :city, "City", class: "block text-sm font-medium text-gray-700" %>
        <%= form.text_field :city,
                        class: "mt-1 block w-full rounded-md border-2 border-gray-400 shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-500 focus:ring-opacity-50 px-2 py-1",
                        required: true %>
      </div>
      
      <div class="space-y-2">
        <%= form.label :state, "State", class: "block text-sm font-medium text-gray-700" %>
        <%= form.select :state,
                    US_STATES,
                    { required: true, include_blank: " Select your state" },
                    {
                      class: "mt-1 block w-full rounded-md border-2 border-gray-400 shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-500 focus:ring-opacity-50"
                    } %>
      </div>
      
      <div class="space-y-2">
        <%= form.label :postal_code, "Postal Code", class: "block text-sm font-medium text-gray-700" %>
        <%= form.number_field :postal_code,
                          class: "mt-1 block w-full rounded-md border-2 border-gray-400 shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-500 focus:ring-opacity-50 px-2 py-1",
                          required: true %>
      </div>
      
      <div class="pt-4">
        <%= form.submit "Submit", class: "w-full inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      </div>
    <% end %>
  </div>
</div>
