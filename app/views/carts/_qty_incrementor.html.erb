<div class="flex flex-row justify-center gap-2" data-controller="cart">
  <button
    class='button'
    data-cart-url-param="<%="/user/#{@active_user.id}/cart/cart_items/#{item.id}"%>"
    data-cart-user-id-param="<%= @active_user.id %>"
    data-cart-user-entity-param="<%= @active_user.class.name %>"
    data-cart-item-id-param="<%= item.product.id %>"
    data-cart-update-val-param="-1"
    data-action="click->cart#update"
  >
    -
  </button>
  <span class="align-middle" data-cart-target="toBeUpdated"><%= item.quantity %></span>
  <button
    class='button'
    data-cart-url-param="<%="/user/#{@active_user.id}/cart/cart_items/#{item.id}"%>"
    data-cart-user-id-param="<%= @active_user.id %>"
    data-cart-user-entity-param="<%= @active_user.class.name %>"
    data-cart-item-id-param="<%= item.product.id %>"
    data-cart-update-val-param="1"
    data-action="click->cart#update"
  >
    +
  </button>
</div>
