<table>
  <tr>
    <th>Order ID</th>
    <th>User</th>
    <th>Status</th>
    <th>Actions</th>
  </tr>
  <% @orders.each do |order| %>
    <tr>
      <td><%= order.id %></td>
      <td><%= order.user.email %></td>
      <td><%= order.status %></td>
      <td><%= link_to 'View', order %></td>
    </tr>
  <% end %>
</table>
