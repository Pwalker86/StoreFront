<%= tag.turbo_frame id:"review_#{@review.id}" do %>
  <div class="bg-white p-6 my-4 rounded-xl shadow-md border border-gray-100">
    <div class="mb-3">
      <h3 class="text-lg font-semibold text-indigo-700"><%= @review.title %></h3>
    </div>

    <div class="text-gray-700 mb-4">
      <%= @review.body %>
    </div>

    <% if links? %>
      <div class="mt-3 flex flex-wrap gap-2">
        <% links.each do |link| %>
          <%= link %>
        <% end %>
      </div>
    <% end %>
  </div>
<% end %>
