<div class="ProductCard border-radius-8">
  <%= link_to [@product.store, @product],  class: "ProductCard__link", data: {turbo:  false} do %>
    <div class="ProductCard__content">
      <% if @product.images.any? %>
        <%= image_tag @product.images.first.variant(:thumb),
        class: "ProductCard__image border-radius-8" %>
      <% end %>
      <h3 class="ProductCard__name"><%= @product.name %></h3>
      <p class="ProductCard__price"><%= number_to_currency(@product.price) %></p>
    </div>
  <% end %>

  <% if @active_user && !helpers.current_store_admin %>
    <%= button_to "Add To Cart",
    user_cart_path(@active_user),
    params: {
      user_entity: @active_user.class.name,
      product_id: @product.id,
      quantity: 1,
    },
    data: {
      turbo: false,
    },
    method: :patch,
    class: "ProductCard__shop-button" %>
  <% end %>
  <% if helpers.current_store_admin === @product.store.store_admin %>
    <%= link_to "Edit",
    edit_store_product_path(@product.store, @product),
    data: {
      turbo: false,
    },
    class: "ProductCard__shop-button" %>
  <% end %>
</div>
