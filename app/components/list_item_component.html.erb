<li class="py-4 hover:bg-gray-50 transition-colors duration-150">
  <div class="flex items-center">
    <% if @product&.images&.attached? && @product.images.first.present? %>
      <div class="flex-shrink-0 h-12 w-12 mr-4">
        <%= image_tag @product.images.first.variant(:thumb), class: "h-full w-full object-cover rounded-md" %>
      </div>
    <% end %>
    <div class="min-w-0 flex-1">
      <%= link_to @name, @href, class: "text-indigo-600 hover:text-indigo-900 font-medium block truncate" %>
      <% if @product.present? %>
        <div class="flex items-center mt-1">
          <% if @product.store.present? %>
            <p class="text-sm text-gray-500 truncate">
              <%= @product.store.name %>
            </p>
          <% end %>
          <% if @product.price.present? %>
            <span class="inline-flex items-center ml-2 px-2 py-0.5 rounded text-xs font-medium bg-green-100 text-green-800">
              <%= number_to_currency(@product.price) %>
            </span>
          <% end %>
        </div>
      <% end %>
    </div>
    <div class="flex-shrink-0 ml-2">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
      </svg>
    </div>
  </div>
</li>
