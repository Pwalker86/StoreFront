<div data-controller="dialogue">
  <div data-dialogue-target="trigger">
    <%= trigger %>
  </div>

  <div 
    data-dialogue-target="container"
    class="hidden fixed inset-0 z-50 overflow-y-auto" 
    aria-modal="true" 
    role="dialog"
  >
    <!-- Semi-opaque overlay -->
    <div 
      data-dialogue-target="overlay"
      data-action="click->dialogue#close"
      class="fixed inset-0 bg-black opacity-50 transition-opacity"
    ></div>

    <!-- Dialogue positioning container -->
    <div class="fixed inset-0 z-10 flex items-center justify-center p-4">
      <!-- Actual dialogue panel -->
      <div 
        data-dialogue-target="panel" 
        class="bg-white rounded-lg shadow-xl <%= width_class %> w-full overflow-hidden"
      >
        <!-- Header with title and close button -->
        <div class="px-4 py-3 sm:px-6 border-b border-gray-200 flex justify-between items-center">
          <h3 class="text-lg font-medium text-gray-900">
            <%= title || "Dialogue" %>
          </h3>
          <button 
            type="button" 
            class="text-gray-400 hover:text-gray-500" 
            data-action="click->dialogue#close"
          >
            <span class="sr-only">Close</span>
            <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>
        
        <!-- Content area -->
        <div class="px-4 py-5 sm:p-6">
          <%= content %>
        </div>
      </div>
    </div>
  </div>
</div>
